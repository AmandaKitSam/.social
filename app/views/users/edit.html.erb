<h1>Edit Your Profile</h1>

<fieldset>
  <legend>Your Details</legend>

  <%= form_for @user do |f| %>
    <%= f.label :name %>
    <%= f.text_field :name %>

    <%= f.label :email %>
    <%= f.email_field :email %>

    <%= f.label :dob %>
    <%= f.date_field :dob %>

    <%= f.label :location %>
    <%= f.text_field :location %>

    <%= f.label :userPhoto %>
    <%= f.file_field :userPhoto %>

    <%= f.submit %>

</fieldset>

<% end %>
