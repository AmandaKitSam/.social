<h1>Update Your Profile</h1>

<fieldset class="form-group">
  <legend>Your Details</legend>
  <%= form_for @user do |f| %>
    <%= f.label :name, "Name: ", class: "col-sm-2 control-label" %>
    <%= f.text_field :name, class: "col-sm-2 control-label" %>
</fieldset>

<fieldset class="form-group">
    <%= f.label :email, "Email: ", class: "col-sm-2 control-label" %>
    <%= f.email_field :email, class: "col-sm-2 control-label" %>
</fieldset>

<fieldset class="form-group">
    <%= f.label :dob, "Date of Birth: ", class: "col-sm-2 control-label" %>
    <%= f.date_field :dob, class: "col-sm-2 control-label" %>
</fieldset>

<fieldset class="form-group">
    <%= f.label :location, "Location: ", class: "col-sm-2 control-label" %>
    <%= f.text_field :location, class: "col-sm-2 control-label" %>
</fieldset>

<fieldset class="form-group">
    <%= f.label :userPhoto, "Profile Photo: ", class: "col-sm-2 control-label" %>
    <%= f.file_field :userPhoto, class: "col-sm-2 control-label" %>
</fieldset>

<fieldset class="form-group">
    <%= f.submit "Update", class: "btn btn-success" %>
</fieldset>

<% end %>
