<h1>Edit Post</h1>
<hr>
<%= form_for @post do |f| %>
  <fieldset class="form-group">
  <%= f.label :dateOfPost, "Date of Post:", class: "col-sm-2 control-label" %>
  <%= f.text_field :dateOfPost, class: "col-sm-2 control-label" %>
  </fieldset>

  <fieldset class="form-group">
  <%= f.label :reply, "Comment:", class: "col-sm-2 control-label" %>
  <%= f.text_field :reply, class: "col-sm-2 control-label" %>
  </fieldset>

  <fieldset class="form-group">
  <%= f.submit "Edit Post", :class => 'btn btn-warning btn-xl' %>
  </fieldset>

  <% end %>
