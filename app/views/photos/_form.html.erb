<p>Upload your photo here:</p>

<%= form_for @photo, html: {multipart: true}, class: "form-horizontal" do |form| %>

  <fieldset class="form-group">
    <div class="field">
    <%= form.label :title, "Title: ", class: "col-sm-2 control-label" %>
    <%= form.text_area :title, class: "col-sm-2 control-label" %>
    </div>
  </fieldset>

  <fieldset class="form-group">
    <div class="field">
    <%= form.label :image, "Image: ", class: "col-sm-2 control-label" %>
    <%= form.file_field :image, class: "col-sm-2 control-label" %>
    </div>
  </fieldset>

  <fieldset class="form-group">
    <div class="field">
    <%= form.label :comment, "Comment: ", class: "col-sm-2 control-label" %>
    <%= form.text_area :comment, class: "col-sm-2 control-label" %>
    </div>
  </fieldset>

  <div class="actions">
  <%= form.submit "Upload Photo", :class => 'btn btn-success' %>
  </div>
<% end %>
